#include <stdio.h>
#include <conio.h>
void main()
{
    int a;
    float n;
    printf ("moi cac ban nhap so a\n");
    scanf ("%d",&a);
    n=a+0.5;
    if (a>0)
    {
        printf ("n=%0.1f la mot so ban nguyen\n",n);
    }
    else if (a<0)
        printf ("n=%0.1f khong phai la mot so ban nguyen\n",n);
    else printf ("n=0.5 la mot so ban nguyen");
    getch ();
}

